<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="eu.zerovector.grabble.Activity.Fragment.Crematorium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupCurAsh"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitCenter"
            android:id="@+id/imgAsh"
            app:srcCompat="@drawable/icon_ash" />
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCurrentAsh"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/UI_AshGrey" />
    </LinearLayout>

    <TextView
        android:text="CREMATORIUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCrematorium"
        android:layout_below="@id/groupCurAsh"
        android:textColor="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textSize="24sp"
        android:gravity="center" />

    <TextView
        android:text="Letters unto Ash"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:textColor="@color/White"
        android:layout_below="@id/lblCrematorium"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:gravity="center" />

    <eu.zerovector.grabble.Activity.Fragment.LetterSelector
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/letterSelector"
        android:layout_below="@id/lblCrematorium"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:text="@string/lblUpArrowCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2sp"
        android:id="@+id/lblPlayerName"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/lblRightArrowCityMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2sp"
        android:id="@+id/lblCityMap"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
