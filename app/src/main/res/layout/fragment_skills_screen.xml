<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="eu.zerovector.grabble.Activity.Fragment.SkillsScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/icon_closers"
        android:id="@+id/imgFactionLogo"
        android:scaleType="fitCenter"
        android:tint="@color/grey_very_dark_semitransparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="EXCEPTIONALLY LONG FACTION NAME THAT SPANS THREE LINES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblFactionName"
        android:textColor="@color/White"
        android:layout_centerInParent="false"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="false" />

    <TextView
        android:text="Leader:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblLeaderColon"
        android:textColor="@color/White"
        android:layout_centerInParent="false"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/lblFactionName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="BENNY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblFactionLeader"
        android:textColor="@color/White"
        android:layout_centerInParent="false"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/lblLeaderColon"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Completed words:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblWordsColon"
        android:textColor="@color/White"
        android:layout_centerInParent="false"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/lblFactionLeader"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp" />

    <TextView
        android:text="23869/23869"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblCompletedWords"
        android:textColor="@color/White"
        android:layout_centerInParent="false"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/lblWordsColon"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/groupAllSkills"
        android:layout_below="@id/lblCompletedWords"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/groupSkillButtons"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSkill1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:background="@color/UI_WhiteTranslucent"
                android:onClick="btnSkills_click"
                fontPath="fonts/BukyVede-Regular.ttf"
                android:text="Ⱘ"
                android:textSize="40sp"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/btnSkill2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/UI_GreyTranslucent"
                android:onClick="btnSkills_click"
                fontPath="fonts/BukyVede-Regular.ttf"
                android:text="Ⱘ"
                android:textSize="40sp"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/btnSkill3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/UI_GreyTranslucent"
                android:onClick="btnSkills_click"
                fontPath="fonts/BukyVede-Regular.ttf"
                android:text="Ⱘ"
                android:textSize="40sp"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/btnSkill4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/UI_GreyTranslucent"
                android:onClick="btnSkills_click"
                fontPath="fonts/BukyVede-Regular.ttf"
                android:text="Ⱘ"
                android:textSize="40sp"
                android:textColor="@color/White" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/layout_skillsdesc_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/groupSkillInfo"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:text="Secrets of the Chosen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSkillName"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="2dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/lblSkillName"
                    android:background="@color/White" />

                <TextView
                    android:text="Your Oracle benefits are now achieved twice as fast, and your minimum Sight range is increased additionally. Oracle increases this heightened range even further.\nI stand for the light, and this is exceptionally long. A page of TypeScript contains 50 lines with 80 chars per line."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSkillDesc"
                    android:layout_below="@id/lblSkillName"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/lblSkillDesc"
                    android:background="@color/UI_AshGrey" />

                <TextView
                    android:text="At current rank (100):"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblAtCurrentColon"
                    android:layout_below="@id/lblSkillDesc"
                    android:textColor="@color/UI_AshGrey"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:text="Current improvement is 10%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblCurrentBoon"
                    android:layout_below="@id/lblAtCurrentColon"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="6dp" />

                <!-- This is here to offset the space loss due to padding. -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/lblCurrentBoon" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:text="@string/lblLeftArrowCityMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2sp"
        android:id="@+id/lblPlayerName"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
